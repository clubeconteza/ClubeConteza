@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterar Senha";
}

@model PortalClubeConteza.Models.AlteraSenha

<div id="logincontent">
    <div id="inner">
        <div id="welcomebox">
            <img src="~/Content/img/logosite.png" class="welcomeimg" /><br/>
            <p class="welcome" style="margin-top:20px;">Altere sua <strong>SENHA</strong></p>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="card card-signup">
                    @using (Html.BeginForm("AtualizaSenha", "Contezino", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="content" style="padding-left: 30px; padding-top: 30px;">
                            @if (ViewData.ModelState["ErroAlteraSenha"] != null && ViewData.ModelState["ErroAlteraSenha"].Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    <div class="container-fluid">
                                        <div class="alert-icon">
                                            <i class="material-icons">error_outline</i>
                                        </div>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                        </button>
                                        <b>AVISO:</b> @ViewData.ModelState["ErroAlteraSenha"].Errors.Select(x => x.ErrorMessage).FirstOrDefault()
                                    </div>
                                </div>
                            }
                            <div class="form-group label-floating">
                                @Html.LabelFor(x => x.SenhaAtual, "Senha atual", new { @class = "control-label" })
                                @Html.PasswordFor(x => x.SenhaAtual, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.SenhaAtual)
                            </div>
                            <div class="form-group label-floating">
                                @Html.LabelFor(x => x.SenhaNova, "Nova senha", new { @class = "control-label" })
                                @Html.PasswordFor(x => x.SenhaNova, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.SenhaNova)
                            </div>
                            <div class="form-group label-floating">
                                @Html.LabelFor(x => x.ConfirmaSenha, "Confirme a nova senha", new { @class = "control-label" })
                                @Html.PasswordFor(x => x.ConfirmaSenha, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ConfirmaSenha)
                            </div>
                        </div>
                        <div class="footer text-center" style="padding-bottom: 30px;">
                            <button class="btn btn-flutuar-cor" type="button" onclick="location.href='@Url.Action("Index", "Contezino")'">Cancelar</button>
                            <button class="btn btn-flutuar-cor" type="submit">Alterar Senha</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>