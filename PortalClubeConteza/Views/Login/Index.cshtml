@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

@model PortalClubeConteza.Models.Login

<div id="logincontent">
    <div id="inner">
        <div id="welcomebox">
            <p class="welcome">Faça seu <strong>login abaixo</strong></p>
            <img src="~/Content/img/logosite.png" class="welcomeimg" />
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="card card-signup">
                    @using (Html.BeginForm("Autentica", "Login", FormMethod.Post, new { id = "form1" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="content" style="padding-left: 30px; padding-top: 30px;">
                            @if (ViewData.ModelState["UsuarioInvalido"] != null && ViewData.ModelState["UsuarioInvalido"].Errors.Count > 0)
                            {
                                <div class="alert alert-danger">
                                    <div class="container-fluid">
                                        <div class="alert-icon">
                                            <i class="material-icons">error_outline</i>
                                        </div>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                        </button>
                                        <b>AVISO:</b> @ViewData.ModelState["UsuarioInvalido"].Errors.Select(x => x.ErrorMessage).FirstOrDefault()
                                    </div>
                                </div>
                            }
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">face</i>
                                </span>
                                @Html.TextBoxFor(x => x.Cpf, new { @class = "form-control", placeholder = "Digite o seu CPF" })
                                @Html.ValidationMessageFor(x => x.Cpf)
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">lock_outline</i>
                                </span>
                                @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Digite a sua Senha" })
                                @Html.ValidationMessageFor(x => x.Senha)
                            </div>
                        </div>
                        <div class="footer text-center" style="padding-bottom: 30px;">
                            <button class="btn btn-flutuar-cor" type="submit">Confirmar</button>
                            <button class="btn btn-flutuar-cor" type="button" onclick="location.href='@Url.Action("Index", "CadastreSuaSenha")'">Cadastrar Senha</button>
                            @*<input id="btnEsqueciMinhaSenha" type="button" value="Esqueci Minha Senha" />*@
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>